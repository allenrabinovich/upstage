<!doctype html>

<title><%= @headers['title'] %></title>

<meta charset="utf-8">
<meta name="author" content="<%= @headers['author'] %>">
<meta name="copyright" content="<%= @headers['copyright'] %>">

<link rel="stylesheet" href="upstage/keynote.css" media="screen">

<style>
  <%= content_for :css %>
</style>

<body>

<div id="bd">

<div class="presentation">

    <div class="slide title">
        <h1><%= @headers['title'] %></h1>
        <p><%= @headers['author'] %></p>
    </div>
   
<%= @content %>

</div>

</div>

<div id="ft">
    <div id="credit">
        <p>
        <%= @headers['footer'] %>
        </p>
    </div>
    <div id="nav">
        <a id="prev" href="#">&larr;</a>
        <p id="currentSlide">0/0</p>
        <a id="next" href="#">&rarr;</a>
    </div>
</div>

<script src="yui3/build/yui/yui.js"></script>
<script src="upstage/slideshow.js"></script>
<script src="upstage/l10n.js"></script>
<script src="upstage/l10n-en.js"></script>
<script src="upstage/controls.js"></script>
<script src="upstage/controls-fade.js"></script>
<script src="upstage/keyboard.js"></script>
<script src="upstage/gesture.js"></script>
<script src="upstage/permalink.js"></script>
<script src="upstage/transition-fade.js"></script>
<script src="upstage/upstage.js"></script>
<script>
  <%= content_for :js %>
</script>

</body>
